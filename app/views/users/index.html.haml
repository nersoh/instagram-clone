.container
	%h1 Getting connected

	%ul
	- @users.each do |user|
		%li
			= link_to user.username, user

			- if current_user.following? user
				= button_to(current_user.active_relationships.find_by(followed_id: user.id), method: :delete, form_class: 'inline-button', class: 'btn btn-danger btn-xs') do
					= hidden_field_tag :followed_id, user.id
					%span.glyphicon.glyphicon-minus 
					Unfollow
			- else
				= button_to(current_user.active_relationships.build, form_class: 'inline-button', class: 'btn btn-success btn-xs') do
					= hidden_field_tag :followed_id, user.id
					%span.glyphicon.glyphicon-plus
					Follow